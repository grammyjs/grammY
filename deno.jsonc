{
    "tasks": {
        "setup": "npm install && deno cache --check src/mod.ts",
        "backport": "npm run backport",
        "test": "deno test --coverage=./test/cov_profile ./test/ && deno task coverage",
        "coverage": "deno coverage --lcov --output=./lcov.info ./test/cov_profile",
        "bundle": "cd bundling && ./bundle-all.sh"
    },
    "fmt": {
        "options": {
            "indentWidth": 4,
            "proseWrap": "preserve"
        },
        "files": {
            "exclude": [
                "./node_modules/",
                "./out/",
                "./package-lock.json",
                "./bundling/bundles"
            ]
        }
    },
    "lint": {
        "files": {
            "exclude": [
                "./node_modules/",
                "./out/",
                "./package-lock.json",
                "./bundling/bundles"
            ]
        }
    }
}
